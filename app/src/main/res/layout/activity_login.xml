<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16dp"
    android:orientation="vertical" tools:context=".LoginActivity" android:theme="@style/LoginTheme">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/login_progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <EditText android:id="@+id/code" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters" android:maxLines="1"
        android:singleLine="true"
        android:maxLength="6"
        android:fontFamily="sans-serif-thin"
        android:hint="ie. OP67E5"
        android:textColor="@android:color/black"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:padding="12dp" />

    <Button android:id="@+id/sign_in_button" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/action_sign_in"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:textColor="@android:color/black"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true"
        android:padding="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_requirement"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:fontFamily="sans-serif-thin"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:padding="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_code"
        android:id="@+id/lostCodeView"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:layout_below="@+id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:padding="10dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:src="@drawable/lignite_logo_beta"
        android:layout_alignTop="@+id/login_form"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Not a backer or gave up trying to be one? Click here."
        android:id="@+id/gaveUp"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/lostCodeView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>



